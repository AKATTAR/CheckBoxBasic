<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_weight="0"
        android:text="@string/select_your_programming_language"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:gravity="center"/>

    <CheckBox
        android:id="@+id/androidcheckBox"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="0"
        android:background="@android:color/darker_gray"
        android:text="@string/Android"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/javacheckBox2"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_weight="0"
        android:background="@android:color/darker_gray"
        android:text="@string/Java"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/phpcheckBox3"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_weight="0"
        android:background="@android:color/darker_gray"
        android:text="@string/PHP"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/pythoncheckBox4"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_weight="0"
        android:background="@android:color/darker_gray"
        android:text="@string/Python"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/uniytcheckBox5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="@android:color/darker_gray"
        android:text="@string/Unity3D"
        android:textSize="24sp" />

</LinearLayout>